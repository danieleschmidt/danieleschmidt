# Terragon SDLC Framework Environment Configuration
# Copy this file to .env and customize for your environment

# Application Configuration
TERRAGON_ENVIRONMENT=production
TERRAGON_LOG_LEVEL=INFO
TERRAGON_DEBUG=false

# Version Information
VERSION=1.0.0
BUILD_DATE=
VCS_REF=

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://terragon:${POSTGRES_PASSWORD}@postgres:5432/terragon_sdlc

# Cache Configuration
REDIS_PASSWORD=your_secure_redis_password_here
TERRAGON_CACHE_TYPE=redis
TERRAGON_CACHE_URL=redis://redis:6379/0

# Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_password_here
PROMETHEUS_RETENTION=30d

# External Services
GITHUB_TOKEN=your_github_token_here
DOCKER_REGISTRY=docker.io/terragon

# Performance Configuration
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
CACHE_SIZE=1000
THREAD_POOL_SIZE=20

# Feature Flags
ENABLE_BIONEURO_FUSION=true
ENABLE_ASYNC_PROCESSING=true
ENABLE_PERFORMANCE_OPTIMIZATION=true
ENABLE_ADVANCED_ANALYTICS=true

# Storage Configuration
DATA_VOLUME_PATH=/opt/terragon/data
LOG_VOLUME_PATH=/opt/terragon/logs
BACKUP_VOLUME_PATH=/opt/terragon/backups

# Networking
NGINX_PORT=80
NGINX_SSL_PORT=443
API_PORT=8000
MONITORING_PORT=8080
METRICS_PORT=9090

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/terragon.crt
SSL_KEY_PATH=/etc/ssl/private/terragon.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Development Configuration (only for development)
DEV_MOUNT_SOURCE=true
DEV_HOT_RELOAD=true
DEV_ENABLE_PROFILING=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5433/terragon_test
TEST_REDIS_URL=redis://localhost:6380/15